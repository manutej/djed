{
  "name": "@djed/cli",
  "version": "0.1.0",
  "description": "CLI tool for scaffolding and managing Djed-based projects",
  "bin": {
    "djed": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "cli",
    "scaffolding",
    "generator",
    "djed",
    "mcp",
    "luxor"
  ],
  "author": "LUXOR",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.2.0",
    "execa": "^8.0.1",
    "handlebars": "^4.7.8",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/validate-npm-package-name": "^4.0.2",
    "typescript": "^5.3.0",
    "vitest": "^1.6.1",
    "memfs": "^4.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
