    },
    "better-sqlite3": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^1.6.1",
    "fp-ts": "^2.16.11",
