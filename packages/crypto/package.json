{
  "name": "@djed/crypto",
  "version": "0.1.0",
  "description": "Type-safe cryptography operations with fp-ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "crypto",
    "cryptography",
    "fp-ts",
    "functional-programming",
    "type-safe",
    "password-hashing",
    "encryption",
    "jwt",
    "security"
  ],
  "license": "MIT",
  "peerDependencies": {
    "fp-ts": "^2.16.0"
  },
  "dependencies": {
    "io-ts": "^2.2.21"
  },
  "optionalDependencies": {
    "bcrypt": "^5.1.1",
    "argon2": "^0.31.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
